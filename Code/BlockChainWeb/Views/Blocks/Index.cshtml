@using System.Collections.Generic
@using Repository.Dto

@model BlockDto
@{
    ViewData["Title"] = "Latest Block";
}

<h2>@ViewData["Title"]</h2>
This is the latest block in the blockchain. Go here to view all the blocks in the <a asp-area="" asp-controller="Blocks" asp-action="BlockChain">blockchain</a>.</p>

@if (Model == null)
{
    <h1>No blocks in chain</h1>
}
else
{
    @Html.Partial("BlockChainPartialView", new List<BlockDto> { Model });
}