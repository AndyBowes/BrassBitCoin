@using System.Collections.Generic
@using Repository.Dto

@model BlockDto
@{
    ViewData["Title"] = "Latest Block";
}

<h2>Latest Block</h2>

<p>View all the blocks in the <a asp-area="" asp-controller="Blocks" asp-action="BlockChain">Blockchain</a>.</p>

@if (Model == null)
{
    <h1>No blocks in chain</h1>
}
else
{
    @Html.Partial("BlockChainPartialView", new List<BlockDto> { Model });
}