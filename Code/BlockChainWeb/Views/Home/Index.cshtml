@{
    ViewData["Title"] = "Home Page";
}

<div class="jumbotron">
    <div class="container">
        <h1>The Yorkshire BrassBitCoin</h1>
        <a class="btn btn-primary btn-lg" role="button" asp-area="" asp-controller="Home" asp-action="BlockChainDefinition">BlockChain definition &raquo;</a>
        @*<a class="btn btn-primary btn-lg" href="#" role="button">BlockChain definition &raquo;</a></p>*@
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <h2>View blockchain</h2>
        <ul>
            <li>View the latest <a asp-area="" asp-controller="Blocks" asp-action="">block</a></li>
            <li>View all the blocks in the <a asp-area="" asp-controller="Blocks" asp-action="BlockChain">blockchain</a></li>
        </ul>
    </div>
    <div class="col-md-4">
        <h2>Coin owners</h2>
        <ul>
            <li>A list of <a asp-area="" asp-controller="Home" asp-action="CoinOwners">coin owners</a> and how many coins they have.</li>
        </ul>
    </div>
    <div class="col-md-4">
        <h2>Upload mined coin</h2>
        <ul>
            <li>Mined a coin? Upload it <a asp-area="" asp-controller="Blocks" asp-action="Upload">here</a>!</li>
        </ul>
    </div>
</div>
